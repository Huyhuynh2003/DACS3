<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coffee"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Menu.Thongtin">

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="93dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#141E16"
            android:onClick="goBackToTintuc"
            android:text="Trở lại"
            app:icon="@drawable/baseline_keyboard_backspace_24"
            tools:background="@drawable/cat_background" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="248dp"
            android:layout_height="43dp"
            android:fontFamily="serif"
            android:text="Thông tin món ăn"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cat_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
